<Defs>

	<ThingDef ParentName="OuterRim_MediumPauldronsFabricatedBase" Name="StormtrooperArmorPauldronBase">
		<defName>OuterRim_StormtrooperPauldrons</defName>
		<label>stormtrooper pauldrons</label>
		<description>Armoured pauldrons used by the Galactic Empire in the Stormtrooper Corps</description>
		<graphicData>
			<texPath>OuterRim/Apparel/Stormtrooper/StandardPauldrons/Apparel</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<color>(255, 255, 255)</color>
		</graphicData>
		<recipeMaker>
			<researchPrerequisite>OuterRim_ImperialArmory</researchPrerequisite>
		</recipeMaker>
		<apparel>
			<tags Inherit="False">
				<li>ImperialApparel</li>
				<li>ImperialStormtrooper</li>
			</tags>
			<wornGraphicPath>OuterRim/Apparel/Stormtrooper/StandardPauldrons/Apparel</wornGraphicPath>
			<useWornGraphicMask>false</useWornGraphicMask>
		</apparel>
		<colorGenerator Class="ColorGenerator_Options">
			<options>
				<li>
					<weight>10</weight>
					<only>(255, 255, 255)</only>
				</li>
			</options>
		</colorGenerator>
		<thingSetMakerTags>
			<li>OuterRim_ApparelGalacticEmpire</li>
		</thingSetMakerTags>
	</ThingDef>

