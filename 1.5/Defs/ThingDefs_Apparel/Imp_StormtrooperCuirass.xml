<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	
	<ThingDef ParentName="OuterRim_MediumArmorFabricatedBase" Name="StormtrooperArmorCuirassBase">
		<defName>OuterRim_StormtrooperCuirass</defName>
		<label>stormtrooper cuirass</label>
		<description>An armoured cuirass used by the Galactic Empire in the Stormtrooper Corps.</description>
		<graphicData>
			<texPath>OuterRim/Apparel/Stormtrooper/StandardCuirass/Apparel</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<color>(255, 255, 255)</color>
		</graphicData>
		<apparel>
			<tags Inherit="False">
				<li>ImperialApparel</li>
				<li>ImperialStormtrooper</li>
			</tags>
			<wornGraphicPath>OuterRim/Apparel/Stormtrooper/StandardCuirass/Apparel</wornGraphicPath>
			<useWornGraphicMask>false</useWornGraphicMask>
		</apparel>
		<colorGenerator Class="ColorGenerator_Options" Inherit="False">
			<options>
				<li>
					<weight>10</weight>
					<only>(255, 255, 255)</only>
				</li>
			</options>
		</colorGenerator>
		<thingSetMakerTags>
			<li>OuterRim_ApparelGalacticEmpire</li>
		</thingSetMakerTags>
	</ThingDef>
	
	<ThingDef ParentName="StormtrooperArmorCuirassBase">
		<defName>OuterRim_StormtrooperCuirass_Specialist</defName>
		<label>stormtrooper cuirass (specialist)</label>
		<description>An armoured cuirass used by the Galactic Empire in the Stormtrooper Corps. The pattern on this variant marks out specialist troops.</description>
		<graphicData>
			<texPath>OuterRim/Apparel/Stormtrooper/SpecialistCuirass/Apparel</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>CutoutComplex</shaderType>
			<color>(150, 150, 150)</color>
		</graphicData>
		<apparel>
			<tags Inherit="False">
				<li>ImperialApparel</li>
				<li>ImperialSpecialist</li>
			</tags>
			<wornGraphicPath>OuterRim/Apparel/Stormtrooper/SpecialistCuirass/Apparel</wornGraphicPath>
			<useWornGraphicMask>true</useWornGraphicMask>
		</apparel>
		<colorGenerator Class="ColorGenerator_Options" Inherit="False">
			<options>
				<li>
					<weight>10</weight>
					<only>(150, 150, 150)</only>
				</li>
			</options>
		</colorGenerator>
	</ThingDef>
	
	<ThingDef ParentName="StormtrooperArmorCuirassBase">
		<defName>OuterRim_StormtrooperCuirass_Pride</defName>
		<label>stormtrooper cuirass (pride)</label>
		<description>An armoured cuirass used by the Galactic Empire in the Stormtrooper Corps. The pattern on this variant is used exclusively by the Pride Battalion.</description>
		<graphicData>
			<texPath>OuterRim/Apparel/Stormtrooper/PrideCuirass/Apparel</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>CutoutComplex</shaderType>
			<color>(255, 255, 255)</color>
		</graphicData>
		<generateCommonality>0</generateCommonality>
		<apparel>
			<tags Inherit="False">
				<li>ImperialPride</li>
			</tags>
			<wornGraphicPath>OuterRim/Apparel/Stormtrooper/PrideCuirass/Apparel</wornGraphicPath>
			<useWornGraphicMask>true</useWornGraphicMask>
		</apparel>
		<colorGenerator Class="ColorGenerator_Options" Inherit="False">
			<options>
				<li>
					<weight>10</weight>
					<only>(255, 255, 255)</only>
				</li>
			</options>
		</colorGenerator>
	</ThingDef>
	
</Defs>