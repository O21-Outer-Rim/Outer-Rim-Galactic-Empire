<?xml version="1.0" encoding="utf-8"?>
<Defs>

	<ThingDef ParentName="OuterRim_MediumHelmetFabricatedBase" Name="StormtrooperArmorHelmetBase">
		<defName>OuterRim_StormtrooperHelmet</defName>
		<label>stormtrooper helmet</label>
		<description>An armoured helmet used by the Galactic Empire in the Stormtrooper Corps.</description>
		<graphicData>
			<texPath>OuterRim/Apparel/Stormtrooper/StandardHelmet/Head</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<color>(255, 255, 255)</color>
		</graphicData>
		<equippedStatOffsets>
			<ShootingAccuracyPawn>-2</ShootingAccuracyPawn>
			<ToxicEnvironmentResistance>0.4</ToxicEnvironmentResistance>
		</equippedStatOffsets>
		<apparel>
			<immuneToToxGasExposure>true</immuneToToxGasExposure>
			<tags Inherit="False">
				<li>ImperialApparel</li>
				<li>ImperialStormtrooper</li>
			</tags>
			<wornGraphicPath>OuterRim/Apparel/Stormtrooper/StandardHelmet/Head</wornGraphicPath>
			<useWornGraphicMask>false</useWornGraphicMask>
		</apparel>
		<colorGenerator Class="ColorGenerator_Options" Inherit="False">
			<options>
				<li>
					<weight>10</weight>
					<only>(255, 255, 255)</only>
				</li>
			</options>
		</colorGenerator>
		<thingSetMakerTags>
			<li>OuterRim_ApparelGalacticEmpire</li>
		</thingSetMakerTags>
	</ThingDef>
	
	<ThingDef ParentName="StormtrooperArmorHelmetBase">
		<defName>OuterRim_StormtrooperHelmet_Specialist</defName>
		<label>stormtrooper helmet (specialist)</label>
		<description>An armoured helmet used by the Galactic Empire in the Stormtrooper Corps. The pattern on this variant marks out specialist troops.</description>
		<graphicData>
			<texPath>OuterRim/Apparel/Stormtrooper/SpecialistHelmet/Head</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>CutoutComplex</shaderType>
			<color>(150, 150, 150)</color>
		</graphicData>
		<apparel>
			<tags Inherit="False">
				<li>ImperialApparel</li>
				<li>ImperialSpecialist</li>
			</tags>
			<wornGraphicPath>OuterRim/Apparel/Stormtrooper/SpecialistHelmet/Head</wornGraphicPath>
			<useWornGraphicMask>true</useWornGraphicMask>
		</apparel>
		<colorGenerator Class="ColorGenerator_Options" Inherit="False">
			<options>
				<li>
					<weight>10</weight>
					<only>(150, 150, 150)</only>
				</li>
			</options>
		</colorGenerator>
	</ThingDef>
	
	<ThingDef ParentName="StormtrooperArmorHelmetBase">
		<defName>OuterRim_StormtrooperHelmet_Pride</defName>
		<label>stormtrooper helmet (pride)</label>
		<description>An armoured helmet used by the Galactic Empire in the Stormtrooper Corps. The pattern on this variant is used exclusively by the Pride Battalion.</description>
		<graphicData>
			<texPath>OuterRim/Apparel/Stormtrooper/PrideHelmet/Head</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>CutoutComplex</shaderType>
			<color>(255, 255, 255)</color>
		</graphicData>
		<generateCommonality>0</generateCommonality>
		<apparel>
			<tags Inherit="False">
				<li>ImperialPride</li>
			</tags>
			<wornGraphicPath>OuterRim/Apparel/Stormtrooper/PrideHelmet/Head</wornGraphicPath>
			<useWornGraphicMask>true</useWornGraphicMask>
		</apparel>
		<colorGenerator Class="ColorGenerator_Options" Inherit="False">
			<options>
				<li>
					<weight>10</weight>
					<only>(255, 255, 255)</only>
				</li>
			</options>
		</colorGenerator>
	</ThingDef>

</Defs>